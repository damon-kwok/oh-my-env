# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
indent_style                = space
indent_size                 = 4
tab_width                   = 4
end_of_line                 = lf
charset                     = utf-8
trim_trailing_whitespace    = true
insert_final_newline        = true
max_line_length             = 80

[*.{c++,cc,cx,cpp,cxx,h++,hh,hx,hpp,hxx,inl,ipp,tlh,tli}]
charset                     = utf-8
indent_style                = space
indent_size                 = 4
max_line_length             = 100

[*.{c,h}]
indent_style                = space
indent_size                 = 4
max_line_length             = 80

[*.cs]
indent_style                = space
indent_size                 = 4
max_line_length             = 80

# Tab indentation (no size specified)
[Makefile]
indent_style                = tab
tab_width                   = 4

[Makefile.am]
indent_style                = tab
indent_size                 = 8
max_line_length             = 100

[configure.ac]
indent_style                = space
indent_size                 = 4
max_line_length             = 100

# Matches multiple files with brace expansion notation
# Set default charset
[*.{js,py}]
charset                     = utf-8

# 4 space indentation
[*.py]
indent_style                = space
indent_size                 = 4

# Indentation override for all JS under lib directory
[lib/**.js]
indent_style                = space
indent_size                 = 2

# Matches the exact files either package.json or .travis.yml
[{package.json,.travis.yml,PKGBUILD,*.sh}]
indent_style                = space
indent_size                 = 2

# Matches the lisp files
[*.{el,els,ros,cl,lisp,lsp,scm,ss,sc,sls,sps,rkt,clj,cljc,cljs,cljs.*,hl,edn,hy,carp}]
indent_style                = space
indent_size                 = 2
tab_width                   = 2

# Matches the pony files
[*.pony]
indent_style                = space
indent_size                 = 2
tab_width                   = 2
