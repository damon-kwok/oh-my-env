#!/usr/bin/env sh
# TERM=xterm-256color emacsclient -t $@

if [ -n "$DISPLAY" ]; then
  TERM=xterm-256color emacsclient --tty --create-frame --no-wait --alternate-editor='emacs -nw' $@
else
  TERM=xterm-256color emacsclient --tty --create-frame --no-wait --alternate-editor='emacs -nw' $@
fi

#TERM=xterm-256color emacsclient --tty --create-frame --no-wait --alternate-editor='emacs -nw' $@

