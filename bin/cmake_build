#!/usr/bin/env sh

ome_cmake_build() {
    cd $1
    local proj_root=`pwd`
    mkdir -p $proj_root/build
    cd $proj_root/build/

    cmake .. -G "$OME_MAKE" \
          -DCMAKE_INSTALL_PREFIX=$OME_PREFIX \
          -DCMAKE_EXPORT_COMPILE_COMMANDS=1 \
          -DCMAKE_CXX_STANDARD=11
    cmake --build . --use-stderr --config Release #--target install
}

ome_cmake_build $@
