#!/usr/bin/env bash

ome_app_wizard() {
    local oldir=`pwd`
    local proj_lang=$1
    local proj_root=$2

    if [ "$proj_lang" == "" ]; then
        tip "what do you need?"
        echo "    --------------------------"
        echo "    0)  C (cmake)"
        echo "    1)  C++ (cmake)"
        echo "    2)  Clojure (lein + luminus)"
        echo "    3)  ClojureScript (lumo + shadow-cljs)"
        echo "    4)  CommonLisp (roswell)"
        echo "    5)  Crystal"
        echo "    6)  Erlang (rebar3)"
        echo "    7)  Elixir (mix)"
        echo "    8)  Golang (dep)"
        echo "    9)  Groovy (gradle)"
        echo "    10) Haskell (stack)"
        echo "    11) Java (gradle)"
        echo "    12) Kotlin (gradle)"
        echo "    13) Nim (nimble)"
        echo "    14) Nodejs (grunt)"
        echo "    15) Nodejs (gulp)"
        echo "    16) OCaml (ohai)"
        echo "    17) OCaml-BuckleScript (bsb-native)"
        echo "    18) Perl"
        echo "    19) PHP (Composer)"
        echo "    20) Python (pipenv)"
        echo "    21) Python (poetry)"
        echo "    22) Python (hatch)"
        echo "    23) Reason (ohai)"
        echo "    24) Reason-BuckleScript (bsb-native)"
        echo "    25) Ruby (rbenv)"
        echo "    26) Rust (cargo)"
        echo "    27) Scala (gradle)"
        echo "    28) Swift (SPM)"
        # echo "    29) .net"
        echo "    --------------------------"
        echo "    r) return"
        echo "    q) quit"

        read -p "please enter your choice:" proj_lang
    fi

    if [ "$proj_root" == "" ]; then
        read -p "please enter project root directory:" proj_root
    fi
    
    local proj_name=`basename $2`
    local proj_ws=`dirname $2`
    

    if [ -d $proj_root ]; then
        echo "'$proj_root' already exist!"
        cd $oldir
        exit
    fi

    mkdir -p $proj_ws
    cd $proj_ws
    proj_ws=`pwd`
    case "$proj_lang" in
        "0"|"c"|"C"|"cc"|"CC")
            gen_cmake_file $proj_root
            cd $proj_root
            echo ".git/" >> .gitignore
            echo "build/" >> .gitignore
            echo "compile_commands.json" >> .gitignore
            gen_clang_format
            # $EDITOR "CMakeLists.txt"
            mkdir -p src
            $EDITOR "src/main.c"
            ;;
        "1"|"c++"|"C++"|"cpp"|"CPP"|"cxx"|"CXX")
            gen_cmake_file $proj_root
            cd $proj_root
            echo ".git/" >> .gitignore
            echo "build/" >> .gitignore
            echo "compile_commands.json" >> .gitignore
            gen_clang_format
            # $EDITOR "CMakeLists.txt"
            mkdir -p src
            $EDITOR "src/main.cpp"
            ;;
        "2"|"clojure"|"clj"|"luminus")
            ome_check_install "lein" "clj"
            lein new luminus $proj_name +reagent +swagger +h2
            cd $proj_root
            # local aa='[clj-commons/secretary "1.2.4"]'
            # local bb='[org.flatland/ordered "1.5.7"] [clj-commons/secretary "1.2.4"]'
            # sed -i 's#$aa#$bb#g' project.clj
            $EDITOR "project.clj"
            ;;
        "hoplon")
            ome_check_install "lein" "clj"
            boot -d boot/new new -t hoplon -n $proj_name
            cd $proj_root
            $EDITOR "project.clj"
            ;;
        "figwheel")
            ome_check_install "lein" "clj"
            lein new figwheel $proj_name -- --reagent
            cd $proj_root
            $EDITOR "project.clj"
            ;;
        "3"|"clojurescript"|"cljs")
            ome_check_install "npm" "nodejs"
            npx create-cljs-project $proj_name
            cd $proj_root
            echo "#!/usr/bin/env bash" >> repl.sh
            echo "" >> repl.sh
            echo "npx shadow-cljs node-repl" >> repl.sh
            echo "# or" >> repl.sh
            echo "# npx shadow-cljs browser-repl" >> repl.sh
            $EDITOR "shadow-cljs.edn"
            ;;
        "4"|"commonlisp"|"cl"|"roswell")
            ome_check_install "ros" "roswell"
            mkdir -p $proj_root
            cd $proj_root
            ros init main
            $EDITOR "main.ros"
            ;;
        "5"|"crystall")
            ome_check_install "crystal" "crystal"
            ome install crystal
            ;;
        "6"|"erlang"|"erl"|"rebar"|"rebar3")
            ome_check_install "erl" "erlang"
            rebar3 new release $proj_name
            cd $proj_root
            $EDITOR "${proj_name}.rebar"
            ;;
        "7"|"elixir"|"elx"|"ex")
            ome_check_install "mix" "elixir"
            mix new $proj_name
            cd $proj_root
            $EDITOR "${proj_name}.exs"
            ;;
        "8"|"golang"|"go")
            ome_check_install "go" "golang"
            mkdir -p $proj_root
            cd $proj_root
            # dep init
            # $EDITOR "Gopkg.toml"
            go mod init $proj_name
            # $EDITOR "go.mod"
            $EDITOR "main.go"
            ;;
        "9"|"groovy")
            ome_check_install "gradle" "jvm"
            mkdir -p $proj_root
            cd $proj_root
            gradle init --type groovy-application --test-framework spock \
                   --dsl groovy --project-name $proj_name --package $proj_name
            $EDITOR "src/main/groovy/$proj_name/App.groovy"
            ;;
        "10"|"haskell"|"hs")
            ome_check_install "stack" "haskell"
            stack new $proj_name
            cd $proj_root
            $EDITOR "src/Main.hs"
            ;;
        "11"|"java")
            ome_check_install "gradle" "jvm"
            mkdir -p $proj_root
            cd $proj_root
            gradle init --type java-application --test-framework spock \
                   --dsl kotlin --project-name $proj_name --package $proj_name
            $EDITOR "src/main/java/$proj_name/App.java"
            ;;
        "12"|"kotlin"|"kt")
            ome_check_install "gradle" "kotlin"
            mkdir -p $proj_root
            cd $proj_root
            gradle init --type kotlin-application --test-framework kotlintest \
                   --dsl kotlin --project-name $proj_name --package $proj_name
            $EDITOR "src/main/kotlin/$proj_name/App.kt"
            ;;
        "13"|"nim")
            ome_check_install "nimble" "nim"
            nimble init $proj_name
            cd $proj_root
            $EDITOR "src/${proj_name}.nim"
            ;;
        "14"|"nodejs-grunt"|"grunt")
            ome_check_install "npm" "nodejs"
            mkdir -p $proj_root
            cd $proj_root
            echo "module.exports = function(grunt) {" >> Gruntfile.js
            echo "    // Do grunt-related things in here" >> Gruntfile.js
            echo "};" >> Gruntfile.js
            npm init
            npm install grunt --save-dev
            npm install grunt-contrib-jshint --save-dev
            $EDITOR "Gruntfile.js"
            ;;
        "15"|"nodejs-gulp"|"gulp")
            ome_check_install "npm" "nodejs"
            mkdir -p $proj_root
            cd $proj_root
            echo "var gulp = require('gulp');" >> gulpfile.js
            echo "gulp.task('default', function() {" >> gulpfile.js
            echo "" >> gulpfile.js
            echo "});" >> gulpfile.js
            npm init
            npm install gulp --save-dev
            $EDITOR "gulpfile.js"
            ;;
        "16"|"ocaml"|"ml")
            ome_check_install "opam" "ocaml"
            ohai --ml --bin $proj_name
            cd $proj_root
            $EDITOR "lib/Main.ml"
            ;;
        "17"|"ocaml-bs"|"bs-ocaml")
            ome_check_install "bsb" "ocaml"
            bsb -init $proj_name -theme basic-reason
            cd $proj_root
            mv src/demo.ml src/${proj_name}.ml
            $EDITOR "src/${proj_name}.ml"
            ;;
        "18"|"perl"|"pl")
            ome_check_install "cpanm" "perl"
            mkdir -p $proj_root
            cd $proj_root
            echo '#!/usr/bin/perl -w' >> ${proj_name}.pl
            echo '# assume these two lines are in all subsequent examples' >> ${proj_name}.pl
            echo 'use strict;' >> ${proj_name}.pl
            echo 'use warnings;' >> ${proj_name}.pl
            echo '' >> ${proj_name}.pl
            echo '# Print a message.' >> ${proj_name}.pl
            echo 'print "Hello, World!\n";' >> ${proj_name}.pl
            chmod +x ./${proj_name}.pl
            $EDITOR "${proj_name}.pl"
            ;;
        "19"|"php"|"composer")
            ome_check_install "nimble" "nim"
            php composer.phar create-project doctrine/orm $proj_name 1.0
            cd $proj_root
            $EDITOR "composer.json"
            ;;
        "20"|"python"|"py"|"pipenv")
            ome_check_install "pipenv" "python"
            mkdir -p $proj_root
            cd $proj_root
            pipenv --three
            $EDITOR "Pipfile"
            ;;
        "21"|"poetry")
            ome_check_install "poetry" "python"
            poetry new $proj_name
            cd $proj_root
            $EDITOR "pyproject.toml"
            ;;
        "22"|"hatch")
            ome_check_install "hatch" "python"
            hatch new $proj_name
            cd $proj_root
            $EDITOR "pyproject.toml"
            ;;
        "23"|"reason"|"re")
            ome_check_install "opam" "ocaml"
            ohai --bin $proj_name
            cd $proj_root
            $EDITOR "lib/Main.re"
            ;;
        "24"|"reason-bs"|"bs-reason")
            ome_check_install "bsb" "ocaml"
            bsb -init $proj_name -theme basic-reason
            cd $proj_root
            mv src/Demo.re src/${proj_name}.re
            $EDITOR "src/${proj_name}.re"
            ;;
        "25"|"ruby"|"rb")
            ome_check_install "bundle" "ruby"
            mkdir -p $proj_root
            cd $proj_root
            bundle init
            $EDITOR "Gemfile"
            ;;
        "26"|"rust"|"rs")
            ome_check_install "cargo" "rust"
            cargo new $proj_name --bin
            cd $proj_root
            $EDITOR "Cargo.toml"
            ;;
        "27"|"scala")
            ome_check_install "gradle" "jvm"
            mkdir -p $proj_root
            cd $proj_root
            gradle init --type scala-library --test-framework scalatest \
                   --dsl kotlin --project-name $proj_name --package $proj_name
            $EDITOR "src/main/scala/$proj_name/App.scala"
            ;;
        "28"|"swift")
            ome_check_install "swift" "swift"
            mkdir -p $proj_root
            cd $proj_root
            swift package init --type executable
            $EDITOR "Sources/main.swift"
            ;;
        "29"|".net")
            ;;
        "q") exit;;
    esac
    echo "root:$proj_root"
    cd $proj_ws
    if [ -d "$proj_root" ]; then
        cd $proj_root
        git init
        ls
    fi

    cd $oldir
}
. $OME_ROOT/env
ome_app_wizard $@
